<!-- Banner -->
<section id="banner" style="margin-left:-22%;margin-right:-22%">
    <div class="inner">
        <h1>
            HirMe: <span>
                Apply for jobs, for free!
            </span>
        </h1>
        <ul class="actions">
            <li>
                @if (User.IsInRole("Applicant") && Request.IsAuthenticated)
                {
                    <a href="../OpenPositions/Index" class="button alt">
                        Find An Opening
                    </a>
                }
                @if (!Request.IsAuthenticated)
                {
                    <a href="../Account/Login" class="button alt">
                        Sign Up/Log In
                    </a>
                }
            </li>
        </ul>
    </div>
</section>

<!-- One -->
@if (!Request.IsAuthenticated)
{
    <section id="one">
        <div class="inner">
            <header>
                <h2>What We Do Here</h2>
            </header>
            <p>As simple as it is, our service to you is job application.  Apply for any job that is available to you!</p>
            <ul class="actions">
                <li><a href="../Home/About" class="button alt">Learn More</a></li>
            </ul>
        </div>
    </section>
}
@if (User.IsInRole("Manager") || User.IsInRole("Admin") && Request.IsAuthenticated)
{
    <!-- Two -->
    if (User.IsInRole("Admin") && Request.IsAuthenticated)
    {
        <section id="two" style="text-align:center;background:lightgrey">
            <div>
                <article>
                    <div class="content">
                        <header>
                            <h3>Manager Access</h3>
                        </header>
                        <p>Here you can view open positions and submit new ones.</p>
                        <div class="image fit">
                            <a href="../OpenPositions/Index" class="button">Open Positions</a>
                        </div>
                    </div>
                </article>
                <article class="alt">
                    <div class="content">
                        <header style="margin-top:12%">
                            <h3>User Management</h3>
                        </header>
                        <div class="image fit">
                            <a href="../UsersAdmin/Index" class="button">Users</a>
                            <a href="../RolesAdmin/Index" class="button">Roles</a>
                        </div>
                    </div>
                </article>
            </div>
        </section>
    }
    else
    {
        <section id="one" style="text-align:center;background:lightgrey">
            <div>
                <header>
                    <h3>Manager Access</h3>
                </header>
                <p>Here you can view open positions at your locations and submit new ones.</p>
                <div class="image fit">
                    <a href="../OpenPositions/Index" class="button">Open Positions</a>
                </div>
            </div>
        </section>
    }
}

<!-- Three -->
<section id="three">
    <div class="inner" style="margin-bottom:10%">
        <article>
            <div class="content">
                <span class="icon fa-laptop"></span>
                <header>
                    <h3>Apply</h3>
                </header>
                <p>From the comfort of your computer, apply for a job based on openings.</p>
            </div>
        </article>
        <article>
            <div class="content">
                <span class="icon fa-diamond"></span>
                <header>
                    <h3>Wait</h3>
                </header>
                <p>Our managers will review your application and decide if you meet the requirements to join our team.</p>
            </div>
        </article>
        <article>
            <div class="content">
                <span class="icon fa-laptop"></span>
                <header>
                    <h3>Job!</h3>
                </header>
                <p>Hopefully, we can say welcome to the crew!</p>
            </div>
        </article>
    </div>
</section>
